{
    "name": "trungdv/zalo-otp",
    "description": "Zalo OTP Package for Laravel - Send and verify OTP via Zalo API",
    "keywords": [
        "laravel",
        "zalo",
        "otp",
        "sms",
        "notification",
        "api"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "trungdv-fabbi",
            "email": "trungdv@fabbi.io",
            "homepage": "https://github.com/trungdv"
        }
    ],
    "homepage": "https://github.com/trungdv-fabbi/zalo-otp",
    "support": {
        "issues": "https://github.com/trungdv-fabbi/zalo-otp/issues",
        "source": "https://github.com/trungdv-fabbi/zalo-otp"
    },
    "require": {
        "php": "^8.1",
        "illuminate/support": "^9.0|^10.0|^11.0|^12.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0|^11.0",
        "mockery/mockery": "^1.0",
        "laravel/framework": "^9.0|^10.0|^11.0|^12.0"
    },
    "autoload": {
        "psr-4": {
            "TrungDV\\ZaloOtp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TrungDV\\ZaloOtp\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "TrungDV\\ZaloOtp\\Providers\\ZaloOtpServiceProvider"
            ],
            "aliases": {
                "ZaloOtp": "TrungDV\\ZaloOtp\\Facades\\ZaloOtp"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}
